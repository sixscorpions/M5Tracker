<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <TextView
        android:id="@+id/tv_delete_message"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80dp"
        android:background="@drawable/login_alert_background"
        android:gravity="center"
        android:padding="@dimen/_12dp"
        android:textAllCaps="true"
        android:textColor="@color/home_type_blue_bg"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40dp"
        android:background="@android:color/transparent"
        android:orientation="horizontal"
        android:weightSum="1">

        <TextView
            android:id="@+id/tv_no"
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@drawable/visit_conformation_no_reschedule_bg"
            android:gravity="center"
            android:padding="@dimen/_2dp"
            android:text="@string/no_str"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sp"/>

        <TextView
            android:id="@+id/tv_yes"
            android:layout_width="@dimen/_0dp"
            android:layout_height="match_parent"
            android:layout_weight=".5"
            android:background="@drawable/visit_conformation_yes_give_feedback_bg"
            android:gravity="center"
            android:padding="@dimen/_2dp"
            android:text="@string/yes_str"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sp"/>
    </LinearLayout>
</LinearLayout>
